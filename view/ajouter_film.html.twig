{# Creation Formulaire d'ajout de Film #}
	<div>
		{% if status is not defined %}
			<form action="ajouter_film" method="post"> <div class="container">
				<input type="text" name="idFilm">
				<input type="text" name="titre">
				<input type="text" name="realisateur">
				<input type="text" name="affiche">
				<input type="text" name="annee">
				<button type="submit">Ajouter le Film</button>
			</div>
		</form>
	{% else %}
		<p>{{status}}
			:</p>
		{% if film is defined %}
			<p>{{film.getTitre}}</p>
			<p>{{film.getRealisateur}}</p>
			<p>{{film.getAffiche}}</p>
			<p>{{film.getAnnee}}</p>
		{% endif %}
	{% endif %}

	<button>
		<a href="affichageFilm" style="text-decoration : none;">
			Retour</a>
	</button>
</div>
