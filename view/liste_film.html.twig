<div class="container shadow-lg p-3 mb-5 bg-body rounded mt-5">
	{% for film in allFilms %}

		<form action="supprimer_film" method="post">
			<div class="container">
				<button type="submit" class="btn btn-outline-dark mt-1">Supprimer film</button>
				<label for="titre">
					<b>
						{{film.getTitre}}
						:
					</b>
				</label>
				<label for="realisteur">
					<b>
						{{film.getRealisateur}}</b>
				</label>
				<label for="affiche">
					<b>
						{{film.getAffiche}}</b>
				</label>
				<label for="annee">
					<b>
						{{film.getAnnee}}</b>
				</label>
				<input value="{{film.getIdFilm}}" name="id" type="hidden">
			</div>
		</form>
	{% endfor %}
</div>
<div class="container text-center col-2 mt-5">
	<div class="row">
		<button class="btn btn-outline-dark">
			<a href="affichageFilms" class="text-reset text-decoration-none">
				Retour</a>
		</button>
	</div>
</div>
