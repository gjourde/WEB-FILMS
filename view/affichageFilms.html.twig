
	<div class="container-fluid">

		<div class="bg-light text-center px-4 py-5">
			<div
				class="row">
				{# Debut du carousel #}
				<div class="col-12">
					<h2>
						Rechercher un film
					</h2>
				</div>
				<div class="col-12 mb-2 ">Saisir un mot du titre</div>

				<div class="col-6 offset-3">
					<form action="affichageFilms" method="post" class="d-flex " role="search">
						<input name="search" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
						<button class="btn btn-outline-dark" type="submit">Rechercher</button>
					</form>
				</div>
			</div>
		</div>

		<div class="container w-80 mt-5 mb-5">
			<div class="container w-80" style="height:600px;">
				<div
					class="row">

					{# Debut du carousel #}
					<div id="carouselExampleControls" class="carousel slide w-100 col-8" data-bs-ride="carousel">
						<div
							class="carousel-inner">
							{# Premiere page du carousel #}
							{% for film in allFilms %}
								{% if loop.first %}
									<div class="carousel-item active w-100">
										<div class="row">
											<div class="col-2"></div>
											<div class="col-4">
												<img src="{{film.getAffiche}}" class="d-block center w-100" style="height:600px; object-fit:cover;" alt="{{film.getAffiche}}">
											</div>
											<div class="col-4">
												<h3>{{film.getTitre}}</h3>
												<p>Realisateur:
													{{film.getRealisateur}}</p>
												<p>Annee:
													{{film.getAnnee}}</p>
												<p>Acteurs:
												</p>
												{% for role in film.getTabRole %}
													{{role.acteur.getNom}}
													{{role.acteur.getPrenom}}
													:
													<b>{{role.getPersonnage}}</b>
													<br>
												{% endfor %}
											</div>
											<div class="col-2"></div>
										</div>
									</div>
									{# Les autres pages du carousel  #}
								{% else %}
									<div class="carousel-item w-100 text-center">
										<div class="row">
											<div class="col-2"></div>
											<div class="col-4">
												<img src="{{film.getAffiche}}" class="d-block center w-100" style="height:600px; object-fit:cover;" alt="{{film.getAffiche}}">
											</div>
											<div class="col-4">
												<h3>{{film.getTitre}}</h3>
												<p>Realisateur:
													{{film.getRealisateur}}</p>
												<p>Annee:
													{{film.getAnnee}}</p>
												<p>Acteurs:
												</p>
												{% for role in film.getTabRole %}
													{{role.acteur.getNom}}
													{{role.acteur.getPrenom}}
													:
													<b>{{role.getPersonnage}}</b>
													<br>
												{% endfor %}
											</div>
											<div class="col-2"></div>
										</div>
									</div>
								{% endif %}
							{% endfor %}
						</div>
						{# Des boutons du carousel #}
						<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
							{# <span class="carousel-control-prev-icon" aria-hidden="true"></span> #}
							{# <i class="bi bi-arrow-left-circle" style="color:black; font-size=64px"></i> #}
								<span style="color:black; font-weight:bold;" aria-hidden="true"> Previous</span>
							<span class="visually-hidden">Previous</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
							<span style="color:black; font-weight:bold;" aria-hidden="true">Next</span>
							{# <i class="bi bi-arrow-right-circle" style="color:black;"></i> #}
							{# <span class="carousel-control-next-icon" aria-hidden="true"></span> #}
							<span class="visually-hidden">Next</span>
						</button>
					</div>

				</div>
			</div>
		</div>
	</div>

